---
layout: layouts/base.njk
title: Posts
eleventyNavigation:
  key: Posts
  oder: 0
pagination:
  data: collections.posts
  size: 2
  alias: posts
  reverse: true
eleventyComputed:
  title: "{{ title }} | {% if pagination.pageNumber > 0 %}Page {{ pagination.pageNumber + 1 }} | {% endif %}{{ metadata.author }}"
permalink: "/posts/{{ pagination.pageNumber }}/"
---
{# permalink: "/posts/" #}
{# permalink: "{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}{% endif %}/index.html" #}

{# permalink: "{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}{% endif %}/" #}
<div>
  <ul>
    {% for post in posts %}
      <div class="flex text-lg justify-between">
        <div>
          <a href="{{ post.url | url }}">{{ post.data.title }}</a>
        </div>
        <div>
          <span>{{ post.date | readableDate }}</span>
        </div>
      </div>
    {% endfor %}
  </ul>
</div>

<span>
  {{ pagination.next | url}}
</span>

<div class="pt-4">
  {% if pagination.previous %}
    <div>
      <a href="{{ pagination.previous.replace(index.html, "") | url }}"
        >← Newer Posts
      </a>
    </div>
  {% endif %}
  {% if pagination.next %}
    <div>
      <a href="{{ pagination.next.replace(index.html, "") | url }}"
        >Older Posts →
      </a>
    </div>
  {% endif %}
</div>