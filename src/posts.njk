---
layout: base
title: Posts
eleventyNavigation:
  key: Posts
  oder: 1
pagination:
  data: collections.posts
  size: 5
  alias: posts
  reverse: true
  permalink: "{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber + 1 }}{% endif %}/index.html"
eleventyComputed:
  title: "{% if pagination.pageNumber > 0 %}Page {{ pagination.pageNumber + 1 }} | {% endif %}{{ title }} | {{ metadata.author }}"
---

<ul>
    {%- for post in posts %}
        <li class="flex justify-between">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
    {% endfor -%}
</ul>
<div class="flex justify-between">
    {% if pagination.previous %}
        <div>
            <a href="{{ pagination.previous.replace(index.html, "") }}">← Newer Posts</a>
        </div>
    {% endif -%}
    {% if pagination.next %}
        <div class="text-right ml-auto">
            <a href="{{ pagination.next.replace(index.html, "") }}">Older Posts →</a>
        </div>
    {% endif -%}
</div>