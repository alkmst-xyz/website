<header class="flex flex-row px-4 py-8 text-xl bg-slate-400">
    <div class="flex-auto font-bold">
        <a href="{{ '/' | url }}" class="logo">Joseph Sebastian</a>
    </div>

    {# Navbar 1 #}
    <div>
        <nav class="">
            {# Primary navbar #}
            <div class="max-w-6xl mx-auto px-4">
                <div class="flex justify-between">
                    {# Primary navbar #}
                    <div class="hidden md:flex items-center space-x-1">
                        <ul class="md:flex md:flex-row">
                            {%- for item in collections.all | eleventyNavigation -%}
                                {%- if item.url -%}
                                    {%- set isCurrent = (item.url == page.url) -%}
                                    {%- set isParent = item.url != '/' and item.url in page.url -%}
                                    <li class="nav-item{% if isCurrent or isParent %} nav-item-active{% endif %}">
                                        <a
                                            class="nav-link"
                                            href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}" {% if isCurrent %} aria-current="page" {% endif %}
                                            >
                                            {{ item.title }}
                                        </a>
                                    </li>
                                {%- endif -%}
                            {%- endfor -%}
                        </ul>

                    </div>
                    {# Mobile menu button #}
                    <div class="md:hidden flex items-center">
                        <button class="outline-none mobile-menu-button">
                            <svg class=" w-6 h-6 "
							x-show="!showMenu"
							fill="none"
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
                                <path d="M4 6h16M4 12h16M4 18h16"></path>
                            </svg>
                        </button>
                    </div>
                </div>
            </div>
            {# mobile menu #}
            <div class="hidden mobile-menu">
                <ul class="">
                    {%- for item in collections.all | eleventyNavigation -%}
                        {%- if item.url -%}
                            {%- set isCurrent = (item.url == page.url) -%}
                            {%- set isParent = item.url != '/' and item.url in page.url -%}
                            <li>
                                <a 
                                class="block px-2 py-4 transition duration-300" 
                                href="{% if isCurrent %}#main{% else %}{{ item.url | url }}{% endif %}" {% if isCurrent %} aria-current="page" {% endif %}
                                >
                                    {{ item.title }}
                                </a>
                            </li>
                        {%- endif -%}
                    {%- endfor -%}
                </ul>
            </div>
            <script>
                const btn = document.querySelector("button.mobile-menu-button");
                const menu = document.querySelector(".mobile-menu");

                btn.addEventListener("click", () => {
                    menu
                        .classList
                        .toggle("hidden");
                });
            </script>
        </nav>
    </div>

