---
layout: base
---

<article>

  <div>
    <div>
      <h1>{{ title }}</h1>
    </div>
    <div class="flex flex-row space-x-2 my-2">
      {%- for tag in tags | filterTagList %}
        {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset -%}
        <a
          class="font-mono text-xs bg-lightSecondary p-2 rounded-lg"
          href="{{ tagUrl | url }}"
          >#{{ tag }}
        </a>
      {%- endfor %}
    </div>
    <div class="flex flex-row space-x-2 my-2 opacity-70">
      <time
        datetime="{{ page.date | htmlDateString }}"
        >{{ page.date | readableDate }}
      </time>
      <span class="text-lightHighlight">âŠ™</span>
      <span>~{{ content | timeToRead }}</span>
    </div>

  </div>

  <div class="markdown">
    {{ content | safe }}
  </div>

  {%- if collections.posts %}
    {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
    {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
    {%- if nextPost or previousPost %}
      <ul>
        {%- if nextPost %}
          <li>Next:
          <a href="{{ nextPost.url | url }}">{{ nextPost.data.title }}</a>
          </li>
        {% endif %}
        {%- if previousPost %}
          <li>Previous:
          <a href="{{ previousPost.url | url }}">{{ previousPost.data.title }}</a>
          </li>
        {% endif %}
      </ul>
    {%- endif %}
  {%- endif %}

</article>